{
  "name": "lsp",
  "displayName": "Language Server Protocol support",
  "description": "A Visual Studio Code extension that uses servers based on the Language Server Protocol to provide language features",
  "categories": [
    "Other"
  ],
  "main": "./out/main",
  "version": "0.0.1",
  "publisher": "sourcegraph",
  "engines": {
    "vscode": "*"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Language support",
      "order": 20,
      "properties": {
        "lsp.trace": {
          "type": "boolean",
          "default": false,
          "description": "Print trace logs of all LSP communication with the language server"
        },
        "lsp.previewLanguages": {
          "type": "boolean",
          "default": false,
          "description": "Enable usage of language servers that are still in preview (alpha/beta quality)"
        },
        "lsp.hideLanguageSupportWarnings": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Don't warn about incomplete language support for these languages"
        }
      }
    }
  },
  "scripts": {
    "compile": "gulp compile-extension:lsp",
    "watch": "gulp watch-extension:lsp"
  },
  "dependencies": {
    "@sourcegraph/vscode-jsonrpc": "3.3.0-alpha.1",
    "@sourcegraph/vscode-languageclient": "3.3.0-alpha.1-sourcegraphpatch.5",
    "isomorphic-fetch": "^2.2.1",
    "universal-websocket-client": "^1.0.1",
    "uuid": "^3.0.1",
    "vscode-languageserver-types": "3.3.0-alpha.1"
  },
  "devDependencies": {
    "@types/node": "^7.0.12"
  }
}
